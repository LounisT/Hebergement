@model HebergementViewModel
@using HebergementManager.Web.Services

@{
    ViewData["Title"] = "Créer un hébergement";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 py-8">
    <div class="px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Créer un hébergement</h1>
                    <p class="mt-2 text-gray-600">Ajoutez un nouveau logement à votre catalogue</p>
                </div>
                <a asp-action="Index"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Retour à la liste
                </a>
            </div>
        </div>

        <!-- Formulaire -->
        <div class="bg-white/70 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-8">
            <form asp-action="Create" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 rounded-lg p-4 text-red-600 text-sm hidden"></div>

                <!-- Informations générales -->
                <div class="space-y-6">
                    <h2 class="text-xl font-semibold text-gray-900 border-b border-gray-200 pb-2">
                        Informations générales
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Nom -->
                        <div class="md:col-span-2">
                            <label asp-for="Nom" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="Nom" type="text"
                                   placeholder="Ex: Appartement T2 centre-ville"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="Nom" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Description -->
                        <div class="md:col-span-2">
                            <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <textarea asp-for="Description" rows="4"
                                      placeholder="Décrivez votre hébergement en détail..."
                                      class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none"></textarea>
                            <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Type -->
                        <div>
                            <label asp-for="TypeHebergementId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <select asp-for="TypeHebergementId"
                                    class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all">
                                <option value="">-- Sélectionnez un type --</option>
                                @foreach (var type in ViewBag.TypeHebergements as List<TypeHebergementDto>)
                                {
                                    <option value="@type.Id">@type.Nom</option>
                                }
                            </select>
                            <span asp-validation-for="TypeHebergementId" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Capacité -->
                        <div>
                            <label asp-for="CapaciteMax" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="CapaciteMax" type="number" min="1" max="50"
                                   placeholder="Ex: 4"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="CapaciteMax" class="text-red-500 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Localisation -->
                <div class="space-y-6">
                    <h2 class="text-xl font-semibold text-gray-900 border-b border-gray-200 pb-2">
                        Localisation
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Adresse -->
                        <div class="md:col-span-2">
                            <label asp-for="Adresse" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="Adresse" type="text"
                                   placeholder="Ex: 123 rue de la Paix"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="Adresse" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Code postal -->
                        <div>
                            <label asp-for="CodePostal" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="CodePostal" type="text"
                                   placeholder="Ex: 75001"
                                   maxlength="5"
                                   pattern="[0-9]{5}"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="CodePostal" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Ville -->
                        <div class="md:col-span-3">
                            <label asp-for="Ville" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <input asp-for="Ville" type="text"
                                   placeholder="Ex: Paris"
                                   class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            <span asp-validation-for="Ville" class="text-red-500 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Équipements -->
                <div class="space-y-6">
                    <h2 class="text-xl font-semibold text-gray-900 border-b border-gray-200 pb-2">
                        Équipements disponibles
                    </h2>

                    @{
                        var equipements = ViewBag.Equipements as List<CategorieEquipementDto>;
                    }

                    @if (equipements != null && equipements.Any())
                    {
                        foreach (var categorie in equipements)
                        {
                            <div class="space-y-3">
                                <h3 class="font-medium text-gray-900">@categorie.CategorieNom</h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                                    @foreach (var equipement in categorie.Equipements)
                                    {
                                        <div class="flex items-center">
                                            <input type="checkbox" name="EquipementIds" value="@equipement.Id" id="equip_@equipement.Id"
                                                   class="w-4 h-4 text-indigo-600 bg-gray-100 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2" />
                                            <label for="equip_@equipement.Id" class="ml-2 text-sm text-gray-700">@equipement.Nom</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Tarification -->
                <div class="space-y-6">
                    <h2 class="text-xl font-semibold text-gray-900 border-b border-gray-200 pb-2">
                        Tarification
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Prix -->
                        <div>
                            <label asp-for="PrixParNuit" class="block text-sm font-medium text-gray-700 mb-2"></label>
                            <div class="relative">
                                <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 font-medium">€</span>
                                <input asp-for="PrixParNuit" type="number" step="0.01" min="0.01"
                                       placeholder="Ex: 85.00"
                                       class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-xl bg-white/80 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" />
                            </div>
                            <span asp-validation-for="PrixParNuit" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Statut actif -->
                        <div class="flex items-center pt-8">
                            <div class="flex items-center h-5">
                                <input asp-for="EstActif" type="checkbox"
                                       class="w-4 h-4 text-indigo-600 bg-gray-100 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2" />
                            </div>
                            <div class="ml-3 text-sm">
                                <label asp-for="EstActif" class="font-medium text-gray-700">Hébergement actif</label>
                                <p class="text-gray-500">L'hébergement sera visible et réservable</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a asp-action="Index"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                        Annuler
                    </a>

                    <button type="submit"
                            class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Créer l'hébergement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-format du code postal
        document.querySelector('[name="CodePostal"]').addEventListener('input', function(e) {
            this.value = this.value.replace(/\D/g, '').substring(0, 5);
        });

        // Auto-format du prix
        document.querySelector('[name="PrixParNuit"]').addEventListener('blur', function(e) {
            if (this.value && !isNaN(this.value)) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });

        // Validation en temps réel
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const inputs = form.querySelectorAll('input, select, textarea');

            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    // Ajouter une classe pour l'état de validation
                    if (this.value.trim() !== '') {
                        this.classList.add('border-green-200');
                        this.classList.remove('border-red-200');
                    }
                });

                input.addEventListener('invalid', function() {
                    this.classList.add('border-red-200');
                    this.classList.remove('border-green-200');
                });
            });
        });
    </script>
}